<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:blossom="http://www.magnolia-cms.com/schema/blossom"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.magnolia-cms.com/schema/blossom http://www.magnolia-cms.com/schema/blossom.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />

	<!-- application context from core module -->
	<context:component-scan base-package="com.megion.site.core.service" />
	<!-- application context from webapp -->
	<context:component-scan base-package="com.megion.site.blinds.service" />

</beans>
